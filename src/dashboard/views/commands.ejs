<!DOCTYPE html>
<html lang="en">
  <head>
      <%- include('./components/header.ejs') %>
      <link rel="stylesheet" href="/css/comandos.css">
    </head>
  <body>
    <%- include ('./components/navbar.ejs') %>
    
    
    <div class="container">
        <div class="row">
            
            <div class="col-md-9" style="margin-left: 10%; margin-top: 5%;">
              <div class="row">
                <div class="col-12 pr-0 mb-2">
                </div>
                <div class="col-12 pr-0">
                        <div id="categorias">
                          <table class="table table-dark">
                            <thead>
                              <tr>
                                <th scope="col">Nome</th>
                                <th scope="col">Description</th>
                                <th scope="col">Aliases</th>
                                <th scope="col">Usage</th>
                                <th scope="col">Example</th>
                              </tr>
                            </thead>
                              <tbody>
                          <%comandos.forEach((comando) => {%>
                                <tr>
                                  <td><%=comando.name%></td>
                                  <td><%=comando.description%></td>
                                  <%if(comando.aliases) {%>
                                    <td><%=comando.aliases.join(', ')%></td>
                                    <%}%>
                                    <td><%=comando.usage%></td>
                                    <%if(comando.example) {%> 
                                      <td><%=comando.example%></td>
                                    <%}else {%>
                                      <td>Nada</td>
                                    <%}%>
                                </tr>
                          <%})%>
                        </tbody>
                        </table>
                          <p id="notfound" style="display: none;">NÃ£o foi encontrado o comando inserido</p>
                        
                        </div>
                </div>
              </div>             
            </div>
        </div>
    </div>

  </body>
</html>