<!DOCTYPE html>
<html lang="en">
    <head>
      <%- include('../components/header.ejs') %>
      <link rel="stylesheet" href="/css/sidebar.css">
    </head>
  <body>

      <div id="page-content-wrapper" style="width: 100%;">
  
        <%- include ('../components/navbar.ejs') %>
  
        <div class="jumbotron text-center bg-transparent">
          <h1 class="display-3">Escolha um servidor</h1>
          <hr>
          <% guilds.forEach((guild) => { %>
            <% if (guild.icon) { %>
            <div class="card mb-3">
              <img src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.png?size=1280" class="card-img-top" alt="<%=guild.name%>">
              <div class="card-body">
                <h5 class="card-title"><%=guild.name%></h5>
                <p class="card-text"><a href="/dashboard/guilds/<%=guild.id%>">Editar</a></p>
              </div>
            </div>
            <% } else { %>
              <div class="ellipsis guild-blue guild-itens">
                  <a href="https://skydiscord-web.herokuapp.com/dashboard/guilds/<%=guild.id%>" class="guild-acr pt-3" style="font-size: 12px;" title="<%=guild.name%>" ><%= guild.name.replace(/\w+/g, name => name[0]).replace(/\s/g, '') %></a>
              </div>
            <%}%>
        <%});%>
        <a href="/invite">
            
        </a>
          
        </div>
        
      </div>
  
    </div>
  </body>
</html>